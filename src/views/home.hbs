<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        {{#if movies.length}}
        {{#each movies}}

        {{>movie}}
        {{/each}}

        {{else}}
        <!-- If there are still no posts in the database display: -->
       <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>

        {{/if}}
    </div>
</section>